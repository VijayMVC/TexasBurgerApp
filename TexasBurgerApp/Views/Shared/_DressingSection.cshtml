<div class="tab-pane fade" id="dressingPanel">
    <div class="row">
        <h1 class="text-center heading-text col-12">Vælg tilbehør</h1>
        <div class="col-2">
            <ul class="picked-list"></ul>
        </div>
        <div class="col-md-10 col-xs-12 row">
            <div class="col-md-8 col-xs-12">
                @{
                    string mainImgURL = Model.CurrentlySelected.ID + "_" + Model.CurrentlySelected.IngName + ".png";
                }
                <img id="selected-image-dressing" src="~/Content/ingridients-images/@mainImgURL" alt="@Model.CurrentlySelected.IngName" class="rounded float-right" />
            </div>
            <div class="col-md-4 col-xs-12">
                <p class="list-head-dressing"><span id="dressing-counter">0</span>/1</p>
                <h2 id="selected-heading-dressing">@Model.CurrentlySelected.IngName</h2>
                <p>Pris: <span id="selected-price-dressing">@Model.CurrentlySelected.Cost</span> kr</p>
                <a class="btn btn-primary btn-lg btn-block" id="selected-dressing-btn" data-dressing-type="4" data-dressing-ing-id="@Model.CurrentlySelected.ID" data-dressing-ing-name="@Model.CurrentlySelected.IngName" href="@Url.Action("AddBun", "Burger", new { id =  Model.CurrentlySelected.ID})">+ Tilføj</a>
                <a class="btn btn-primary btn-lg btn-block d-none" id="unselect-dressing-btn" data-dressing-type="4" data-dressing-ing-id="@Model.CurrentlySelected.ID" data-dressing-ing-name="@Model.CurrentlySelected.IngName" href="@Url.Action("AddBun", "Burger", new { id =  Model.CurrentlySelected.ID})">- Fjern</a>
            </div>
        </div>
        <div class="col-12">
            <!--Carousel with ingridients-->

            <div id="carousel-example-generic-dressing" class="carousel multi slide" data-ride="carousel" data-itemcount-l="3" data-itemcount-m="3" data-itemcount-s="1" autostart="0">

                <div class="carousel-inner col-md-8 offset-md-2" role="listbox">

                    @foreach (var ing in Model.ingridientsDressing)
                    {

                        string imgURL = ing.ID + "_" + ing.IngName + ".png";
                        <div data-dressing-ing-id="@ing.ID" data-dressing-ing-name="@ing.IngName" data-dressing-ing-price="@ing.Cost" class="col-xs-10 col-sm-6 col-md-4 text-center ingDisplays dressingDisplay className">
                            @*<a href="@Url.Action("index", "burger", new { id =  ing.ID})">*@
                            <img src="~/Content/ingridients-images/@imgURL" class="img-fluid carousel-image">
                            <p class="text-center carousel-text">@ing.IngName</p>
                            @*</a>*@
                        </div>
                    }

                </div>
            </div>


            <a class="carousel-control-prev" href="#carousel-example-generic-dressing" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-example-generic-dressing" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>

        <div class="col-12 large-menu-con">
            <div class="col-12 large-menu">
                <div class="row">
                    <div class="col-12 text-right large-menu-button"><a class="finish-burger-btn">Færdig <span class="icon icon-bun"></span> ></a></div>
                </div>
            </div>
        </div>
   
    </div>

</div>